{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "prConcurrentLimit": 1,
  "ignoreDeps": ["nvcr.io/nvidia/cuda", "gymnasium", "sphinx", "sphinx-autodoc-typehints", "mypy"]
}
